@model IEnumerable<Phone>
@{ 
    ViewData["Title"] = "Список Смартфонов";
}

<!DOCTYPE html>
<html>
    <head>
        <title>Магазин смартфонов</title>
    </head>
    <body>
        <h3>Смартфоны</h3>
        <table class="table-condensed">
            <tr>
                <td>Модель</td>
                <td>Производитель</td>
                <td>Цена</td>
                <td></td>

            </tr>
            @foreach(var phone in Model)
            {
                <tr>
                    <td>@phone.Name</td>
                    <td>@phone.Company</td>
                    <td>@phone.Price</td>
                    <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
                </tr>
            }
        </table>
        <form method="post" action="~/Home/Kitty">
            <label>Тип:</label><br/>
            <input type="radio" value="Рыжая" name="type" /><br />
            <label>Номер:</label><br />
            <input type="number" name="number" /><br />
            <input type="submit" value="Отправить"/>
        </form>
    </body>
</html>